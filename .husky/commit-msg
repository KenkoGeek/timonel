#!/usr/bin/env sh

# Validate conventional commits with mandatory scopes
echo "ğŸ” Validating commit message format..."
pnpm exec commitlint --edit "$1" || {
  echo "âŒ Commit message validation failed!"
  echo ""
  echo "ğŸ“ Required format: type(scope): description"
  echo ""
  echo "ğŸ“‹ Valid types: feat, fix, docs, style, refactor, perf, test, chore, ci, build, revert"
  echo "ğŸ“‹ Valid scopes: core, cli, helm, aws, azure, gcp, onprem, network, umbrella, examples, docs, ci, deps, release"
  echo ""
  echo "âœ… Examples:"
  echo "   feat(network): add NetworkPolicy helpers"
  echo "   fix(core): resolve TypeScript strict type errors"
  echo "   docs(examples): update WordPress example"
  echo "   chore(release): bump version to 0.5.0"
  echo ""
  exit 1
}
