{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "perf", "test", "chore", "ci", "build", "revert"]
    ],
    "scope-empty": [2, "never"],
    "scope-enum": [
      2,
      "always",
      [
        "core",
        "cli",
        "helm",
        "aws",
        "network",
        "umbrella",
        "examples",
        "docs",
        "ci",
        "deps",
        "release"
      ]
    ]
  }
}
