{
  "name": "timonel",
  "type": "module",
  "version": "0.4.0",
  "description": "Timonel: programmatic Helm chart generator using cdk8s (TypeScript)",
  "bin": {
    "timonel": "dist/cli.js",
    "tl": "dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./lib/helm": {
      "types": "./dist/lib/helm.d.ts",
      "default": "./dist/lib/helm.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "tsc -w -p tsconfig.json",
    "prepare": "husky",
    "prepack": "pnpm build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:lint": "eslint .",
    "security:audit": "pnpm audit --audit-level=moderate",
    "security:check": "pnpm run security:lint && pnpm run security:audit",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update --latest",
    "md:lint": "markdownlint \"**/*.md\"",
    "md:fix": "markdownlint --fix \"**/*.md\"",
    "test": "echo \"No tests specified\" && exit 0",
    "ci:check": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm build",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "version:patch": "npm version patch && echo 'Remember to update CHANGELOG.md'",
    "version:minor": "npm version minor && echo 'Remember to update CHANGELOG.md'",
    "version:major": "npm version major && echo 'Remember to update CHANGELOG.md'"
  },
  "keywords": [
    "helm",
    "charts",
    "cdk8s",
    "kubernetes",
    "iac"
  ],
  "author": "Franklin Garc√≠a <KenkoGeek>",
  "license": "MIT",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KenkoGeek/timonel.git"
  },
  "bugs": {
    "url": "https://github.com/KenkoGeek/timonel/issues"
  },
  "homepage": "https://github.com/KenkoGeek/timonel#readme",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{js,cjs,json,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.md": [
      "markdownlint --fix"
    ]
  },
  "dependencies": {
    "cdk8s": "^2.70.11",
    "ts-node": "^10.9.2",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "markdownlint": "^0.38.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "SECURITY.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
