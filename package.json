{
  "name": "timonel",
  "type": "module",
  "version": "3.1.0-beta.1",
  "description": "Timonel: programmatic Helm chart generator using cdk8s (TypeScript)",
  "bin": {
    "timonel": "dist/cli.js",
    "tl": "dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./lib/helm": {
      "types": "./dist/lib/helm.d.ts",
      "import": "./dist/lib/helm.js",
      "default": "./dist/lib/helm.js"
    },
    "./lib/utils/helmControlStructures": {
      "types": "./dist/lib/utils/helmControlStructures.d.ts",
      "import": "./dist/lib/utils/helmControlStructures.js",
      "default": "./dist/lib/utils/helmControlStructures.js"
    },
    "./lib/utils/logger": {
      "types": "./dist/lib/utils/logger.d.ts",
      "import": "./dist/lib/utils/logger.js",
      "default": "./dist/lib/utils/logger.js"
    },
    "./lib/utils/helmYamlSerializer": {
      "types": "./dist/lib/utils/helmYamlSerializer.d.ts",
      "import": "./dist/lib/utils/helmYamlSerializer.js",
      "default": "./dist/lib/utils/helmYamlSerializer.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "tsc -w -p tsconfig.json",
    "prepare": "husky",
    "prepack": "pnpm build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:lint": "eslint .",
    "security:audit": "pnpm audit --audit-level=high",
    "security:check": "pnpm run security:lint && pnpm run security:audit",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update --latest",
    "md:lint": "markdownlint \"**/*.md\"",
    "md:fix": "markdownlint --fix \"**/*.md\"",
    "test": "vitest run --config vitest.config.ts",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "doc:coverage": "tsx scripts/project-doc-coverage.ts",
    "doc:coverage:validate": "tsx scripts/validate-doc-coverage.ts",
    "ci:check": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm build",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "version:patch": "npm version patch && echo 'Remember to update CHANGELOG.md'",
    "version:minor": "npm version minor && echo 'Remember to update CHANGELOG.md'",
    "version:major": "npm version major && echo 'Remember to update CHANGELOG.md'"
  },
  "keywords": [
    "helm",
    "charts",
    "cdk8s",
    "kubernetes",
    "iac"
  ],
  "author": "Franklin Garc√≠a <KenkoGeek>",
  "license": "MIT",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KenkoGeek/timonel.git"
  },
  "bugs": {
    "url": "https://github.com/KenkoGeek/timonel/issues"
  },
  "homepage": "https://github.com/KenkoGeek/timonel#readme",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{js,cjs,json,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.md": [
      "markdownlint --fix"
    ]
  },
  "dependencies": {
    "cdk8s": "^2.70.40",
    "cdk8s-plus-33": "^2.4.17",
    "constructs": "^10.4.4",
    "handlebars": "^4.7.8",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "ts-node": "^10.9.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint": "^0.40.0",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "SECURITY.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "pnpm": {
    "overrides": {
      "@conventional-changelog/git-client": ">=2.0.0",
      "glob": "^13.0.0"
    }
  }
}
